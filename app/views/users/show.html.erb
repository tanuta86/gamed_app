<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    
    <% if @user.self_introduction.present? %>
      <h3>自己紹介</h3>
      <ol class="self_introductions">
        <%= render @self_introduction %>
      </ol>
      
    <% end %>
  </div>
</div>