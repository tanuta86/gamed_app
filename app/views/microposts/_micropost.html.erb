<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>
  <%= image_tag micropost.image if micropost.image.attached? %>  
  <span class="timestamp">
    <%= time_ago_in_words(micropost.created_at) %>前
    <% if current_user?(micropost.user) || current_user.admin? || current_user.groups.include?(micropost.group) %>
      <%= link_to "削除", micropost, method: :delete,
                                       data: { confirm: "削除しますか?" } %>    
  </span>
</li>
<% end %>
